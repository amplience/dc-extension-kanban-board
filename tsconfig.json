{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "types"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "allowJs": true,
